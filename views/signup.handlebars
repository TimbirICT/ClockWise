<div class="bg-red-800 grid place-items-center h-screen border border-black rounded-lg">
    <div class="text-white text-center">
      <h1 class="text-6xl font-bold">ClockWise</h1>
      <p class="text-2xl mt-2">Welcome to ClockWise</p>
      <p class="text-xl mt-2">Please Sign Up Below</p>
  
      {{!-- form --}}
      <form class="mt-10" id="signup-form">
        <div class="mb-6">
  
          {{!-- email label --}}
          <label for="email" class="block mb-2 text-sm font-medium text-gray-900">Email</label>
          {{!-- email input --}}
          <input type="text" id="email-signup"
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm text-center rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
            placeholder="Enter your Email" required />
        </div>
        <div class="mb-6">
  
            {{!-- username label --}}
            <label for="username" class="block mb-2 text-sm font-medium text-gray-900">Username</label>
            {{!-- username input --}}
            <input type="text" id="username-signup"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm text-center rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
              placeholder="Enter your Username" required />
          </div>
        <div class="mb-6">
  
          {{!-- password label --}}
          <label type="password" class="block mb-2 text-sm font-medium text-gray-900">Password</label>
  
          {{!-- password input --}}
          <input type="password" id="password-signup"
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm text-center rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
            placeholder="Enter your password" required />
        </div>
  
        {{!-- submit button --}}
          <button type="submit" id="signupButton"
          class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Sign up</button></a>
      </form>
    </div>
  </div>
  <script src="/js/signup.js"></script>
